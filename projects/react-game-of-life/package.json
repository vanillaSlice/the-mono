{
  "name": "react-game-of-life",
  "version": "1.0.0",
  "description": "React Game of Life",
  "keywords": [
    "game of life"
  ],
  "homepage": "https://reactgameoflife.mikelowe.xyz/",
  "bugs": {
    "url": "https://github.com/vanillaSlice/ReactGameOfLife/issues",
    "email": "mikelowedev@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Mike Lowe",
    "email": "mikelowedev@gmail.com",
    "url": "https://www.mikelowe.xyz/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vanillaSlice/ReactGameOfLife.git"
  },
  "scripts": {
    "start": "run-p watch:css start:js",
    "watch:css": "node-sass-chokidar src/ -o src/ --watch --recursive",
    "start:js": "react-scripts start",
    "build": "run-s build:css build:js",
    "build:css": "node-sass-chokidar src/ -o src/",
    "build:js": "react-scripts build",
    "test": "run-s build:css test:lint test:unit",
    "test:lint": "run-s test:lint:js test:lint:scss",
    "test:lint:js": "eslint --ext=js --ext=jsx src/",
    "test:lint:scss": "stylelint src/**/*.scss",
    "test:unit": "react-scripts test --env=jsdom --coverage --colors",
    "coveralls": "cat coverage/lcov.info | node node_modules/.bin/coveralls",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "node-sass-chokidar": "^1.3.4",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-scripts": "2.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.4.1"
  },
  "private": true,
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.jsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 80,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
